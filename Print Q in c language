#include<stdio.h>
int main()
{
  int c,r,row;
printf("enter row number of row should be greater or equal to 4:-");
scanf("%d",&row);
for(r=0;r<=row;r++)
{ 
  for(c=0;c<=row/2+1;c++)
  {
    if(r==row||c==0||c==row/2||r==0)
    {
    printf("*");
    if(r==0&&c==row/2)
    printf("\n");
    }
    else
    printf(" "); 
  } 
printf("\n");
}
}
   
